{
  "manifest_version": 3,
  "name": "Shorter Path",
  "version": "0.0.1",
  "description": "Simplify and explain text on the web.",
  "permissions": ["contextMenus"],
  "host_permissions":[
    "https://*/*", 
    "http://*/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ]
}